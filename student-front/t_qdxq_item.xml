<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:background="@drawable/blackground">

        <ImageView
            android:id="@+id/Shopping_Image"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/course" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/cname_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="20dp"
                android:paddingTop="25dp"
                android:text="这是一个课程"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/cname_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="right"
                    android:paddingLeft="20dp"
                    android:paddingTop="25dp"
                    android:text="签到人数："
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/count_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingTop="25dp"
                    android:textColor="#FF0000"
                    android:text="0"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/cname_7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingTop="25dp"
                    android:text="/"
                    android:textSize="25dp"
                    />
                <TextView
                    android:id="@+id/count_student"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingTop="25dp"
                    android:text="47"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="match_parent"/>
</LinearLayout>